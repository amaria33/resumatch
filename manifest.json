{
  "manifest_version": 3,
  "name": "ResuMatch — Free Offline Keyword Analyzer",
  "version": "1.0.0",
  "description": "Compare your résumé against job descriptions with TF-IDF keyword analysis. Find gaps, boost your match score—100% offline and private.",
  "action": {
    "default_popup": "popup-full.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup-full.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["sidePanel", "tabs"],
  "background": {
    "service_worker": "background.js"
  }
}

