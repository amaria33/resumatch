{
  "manifest_version": 3,
  "name": "JobScan Lite — Offline Keyword Match",
  "version": "1.0.0",
  "description": "Compare job descriptions and résumés offline with keyword matching and TF-IDF analysis. Zero-cost, privacy-friendly.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["sidePanel", "tabs"],
  "background": {
    "service_worker": "background.js"
  }
}

